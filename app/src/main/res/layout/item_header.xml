        android:layout_weight=".2"
        android:padding="8dp"
        android:text="RECVRD"
        android:textAllCaps="true"
        android:textColor="@color/dark_green"
        android:textStyle="bold"/>

    <TextView

        android:layout_width="wrap_content"
